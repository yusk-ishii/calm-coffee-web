---
import catchPhrase from '@assets/fv_catch-phrase.svg';
import FV from '@assets/fv_01_sp.jpg';
---

<section class="fv">
  <div class="fv-image">
    <img src={FV.src} alt="calm coffee" />
  </div>
  <h1 class="catchphrase">
    <img src={catchPhrase.src} alt="波と珈琲と静けさと。" />
  </h1>
</section>

<style lang="scss">
  .fv {
    position: relative;
    display: flex;
    flex-direction: column;
    height: 100vh;
  }

  .fv-image {
    position: relative;
    width: 100%;
    height: 50%;
    overflow: hidden;

    img {
      position: absolute;
      top: 0;
      left: 50%;
      width: 422px; // JSで計算する
      max-width: initial;
      aspect-ratio: 1 / 1;
      transform: translate(-50%, 0);
    }
  }

  .catchphrase {
    display: grid;
    place-items: center;
    width: 100%;
    height: 50%;

    img {
      width: 82px;
    }
  }
</style>
