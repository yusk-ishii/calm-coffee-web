---
interface Props {
  text: string;
}

const { text } = Astro.props;
---

<a href="#" class="link">{text}</a>

<style lang="scss">
  .link {
    display: inline-flex;
    align-items: center;
    justify-content: space-between;
    width: clamp-size(168);
    padding: clamp-size(8);
    font-size: clamp-size(14);
    line-height: 1;
    border-bottom: 1px solid var(--text-color);

    &::after {
      display: block;
      width: clamp-size(20);
      height: clamp-size(20);
      content: '';
      background-image: url('../assets/icon_external.svg');
      background-repeat: no-repeat;
      background-size: contain;
    }
  }
</style>
