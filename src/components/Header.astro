---
import MenuButton from '@components/MenuButton.astro';
import GlobalMenu from '@components/GlobalMenu.astro';
---

<header class="header">
  <MenuButton />
  <GlobalMenu />
</header>

<style lang="scss">
  .header {
    position: fixed;
    right: 0;
    bottom: 0;
    z-index: 1;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    width: 100%;
    padding: clamp-size(16) clamp-size(8);
    pointer-events: none;

    @include mq-desktop {
      width: var(--pc-content-width);
    }
  }
</style>
