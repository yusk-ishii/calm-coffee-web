---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<section class="page-header">
  <div class="page-header-inner">
    <h1 class="header-title">{title}</h1>
  </div>
</section>

<style lang="scss">
  .page-header {
    width: 100%;
    aspect-ratio: 1/1;
    overflow: hidden;

    @include mq-mobile {
      max-height: 540px;
    }

    @include mq-desktop {
      position: fixed;
      top: 0;
      left: 0;
      z-index: -1;
      width: calc(100% - var(--pc-content-width));
      height: 100%;
      padding: 10px;
      background-color: color-mix(in srgb, var(--color-text) 5%, transparent);
    }
  }

  .page-header-inner {
    position: relative;
    display: grid;
    place-items: center;
    width: 100%;
    height: 100%;
    animation: blur-in 2s both var(--ease-out-sine);

    &::before {
      position: absolute;
      top: 0;
      left: 0;
      z-index: -1;
      width: 100%;
      height: 100%;
      content: '';
      background-image: url('../assets/contact.jpg');
      background-position: center;
      background-size: cover;

      @include mq-desktop {
        border-radius: 8px;
      }
    }
  }

  .header-title {
    font-size: clamp-size(32);
    color: #fff;
  }
</style>
