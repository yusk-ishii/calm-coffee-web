---
interface Props {
  title: string;
}

import LogoType from '@components/LogoType.astro';
const { title } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<header class="page-header">
  <a href={`${base}/`} class="header-logo">
    <LogoType color="currentcolor" />
  </a>
  <div class="header-visual">
    <div class="header-image">
      <h1 class="header-title">{title}</h1>
    </div>
  </div>
</header>

<style lang="scss">
  .page-header {
    width: 100%;
    height: calc(var(--vh) / 2);
    overflow: hidden;

    @include mq-mobile {
      aspect-ratio: 1/1;
    }

    @include mq-desktop {
      padding: clamp-size(24) clamp-size(20);
    }
  }

  .header-logo {
    width: clamp-size(138);
    color: #fff;
    animation: fade-in 2s both var(--ease-out-sine);

    @include mq-mobile {
      position: absolute;
      top: clamp-size(24);
      left: clamp-size(24);
    }

    @include mq-desktop {
      display: block;
      color: var(--color-text);
    }

    > img {
      width: 100%;
      height: auto;
    }
  }

  .header-visual {
    position: relative;
    z-index: -1;
    width: 100%;
    height: 100%;
    animation: blur-in 0.4s both var(--ease-out-sine);

    @include mq-desktop {
      position: fixed;
      top: 0;
      left: 0;
      z-index: -1;
      width: calc(100% - var(--pc-content-width));
      padding: 10px;
      background-color: color-mix(in srgb, var(--color-text) 5%, transparent);
    }
  }

  .header-image {
    position: relative;
    display: grid;
    place-items: center;
    width: 100%;
    height: 100%;
    padding-top: clamp-size(32);
    animation: blur-in 2s both var(--ease-out-sine);

    &::before {
      position: absolute;
      top: 0;
      left: 0;
      z-index: -1;
      width: 100%;
      height: 100%;
      content: '';
      background-image: url('../assets/contact.jpg');
      background-position: center;
      background-size: cover;

      @include mq-desktop {
        border-radius: 8px;
      }
    }
  }

  .header-title {
    font-size: clamp-size(32);
    color: #fff;
    animation: fade-in-up 2s both var(--ease-out-sine);
  }
</style>
