---
interface Props {
  id: string;
  title: string;
  subTitle: string;
  paragraphs: string[];
}

const { id, title, subTitle, paragraphs } = Astro.props;
---

<section id={id} class="section">
  <header class="header">
    <h2 class="title">{title}</h2>
    <p class="subtitle" set:html={subTitle} />
  </header>
  <div class="description">
    {paragraphs.map((p) => <p set:html={p} />)}
  </div>
  <div class="content">
    <slot />
  </div>
</section>

<style lang="scss">
  .section {
    max-width: var(--sp-max-width);
    padding: clamp-size(80) clamp-size(20) clamp-size(64);
    margin: 0 auto;
  }

  .title {
    font-size: clamp-size(18);
    font-weight: 300;
    color: var(--text-sub-color);
  }

  .subtitle {
    margin-top: clamp-size(12);
    font-size: clamp-size(43);
    font-weight: 300;
    line-height: 1.4;
    color: var(--text-color);
  }

  .description {
    margin-top: clamp-size(40);
    margin-bottom: clamp-size(48);

    p + p {
      margin-top: clamp-size(16);
    }
  }
</style>
