---
import IconInstagram from '@components/icons/IconInstagram.astro';
const base = import.meta.env.BASE_URL;
---

<div class="global-navigation">
  <nav id="js-nav" class="nav">
    <ul class="nav-list">
      <li><a href={`${base}/#top`}>TOP</a></li>
      <li><a href={`${base}/#story`}>STORY</a></li>
      <li><a href={`${base}/#menu`}>MENU</a></li>
      <li><a href={`${base}/#item`}>ITEM</a></li>
      <li><a href={`${base}/#store-info`}>STORE INFO</a></li>
      <li><a href={`${base}/contact`}>CONTACT</a></li>
    </ul>
    <div class="sns">
      <a class="sns-icon" href="https://instagram.com/" target="_blank">
        <IconInstagram />
      </a>
    </div>
  </nav>
</div>

<style lang="scss">
  .global-navigation {
    text-align: center;
  }

  .nav-list {
    display: flex;
    flex-direction: column;

    > li {
      > a {
        display: inline-block;
        padding: clamp-size(12) clamp-size(16);
        font-size: clamp-size(16);
        line-height: 1;
      }

      & + li {
        margin-top: clamp-size(16);

        @include mq-desktop {
          margin-top: 10px;
        }
      }
    }
  }

  .sns {
    margin-top: clamp-size(32);

    > .sns-icon {
      display: inline-block;
      width: clamp-size(32);
      height: clamp-size(32);
    }
  }
</style>
