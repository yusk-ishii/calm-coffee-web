---
import Section from '@components/Section.astro';
import LinkButton from '@components/LinkButton.astro';
import Menu01Img from '@assets/image_menu01.jpg';
import Menu02Img from '@assets/image_menu02.jpg';

const id = 'menu';
const title = 'MENU';
const subTitle = '季節に寄り添う<br />珈琲たち。';
const paragraphs = [
  'その時季の空気や気分に寄り添えるよう、<br />珈琲豆の選び方や焙煎を少しずつ見直しています。<br />香りと味わいのバランスは、いつも“今”のために。',
  'あなたの静かな時間を支える一杯を、<br />今日も丁寧にご用意しています。',
];
---

<Section id={id} title={title} subTitle={subTitle} paragraphs={paragraphs}>
  <ul class="menu-list">
    <li class="product">
      <img src={Menu01Img.src} alt="Calmブレンド" class="product-image" />
      <div class="product-info">
        <h3 class="product-name">calmブレンド</h3>
        <p class="product-price">Regular ¥430- / Large ¥480-</p>
      </div>
    </li>
    <li class="product">
      <img src={Menu02Img.src} alt="カフェラテ" class="product-image" />
      <div class="product-info">
        <h3 class="product-name">カフェラテ</h3>
        <p class="product-price">Regular ¥490 / Large ¥570-</p>
      </div>
    </li>
  </ul>
  <div class="menu-link">
    <LinkButton text="全メニューを見る" />
  </div>
</Section>

<style lang="scss">
  .product {
    .product-image {
      aspect-ratio: 1 / 1;
    }

    .product-info {
      margin-top: clamp-size(12);
    }

    .product-name {
      font-size: clamp-size(16);
      line-height: 1;
    }

    .product-price {
      margin-top: clamp-size(8);
      font-size: clamp-size(14);
      line-height: 1;
    }

    & + & {
      margin-top: clamp-size(40);
    }
  }

  .menu-link {
    width: 100%;
    margin-top: clamp-size(40);
    text-align: center;
  }
</style>
