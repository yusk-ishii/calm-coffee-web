---
import 'destyle.css';
import '@styles/global.scss';
import 'yakuhanjp/dist/css/yakuhanmp.css';
import '@fontsource/zen-kaku-gothic-new/300.css';
import '@fontsource/zen-kaku-gothic-new/400.css';
import '@fontsource-variable/montserrat';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';

interface Props {
  title?: string;
}

const { title } = Astro.props;
const siteName = 'calm coffee';
const siteDesc = '鎌倉・七里ヶ浜のカフェ';
const pageTitle = title ? `${title} | ${siteName}` : `${siteName} | ${siteDesc}`;
const description =
  '鎌倉・七里ヶ浜の海沿いカフェ。忙しい日常の合間に、静かで穏やかな時間を届ける一杯のコーヒー体験を提供します。';
---

<!doctype html>
<html lang="ja">
  <head>
    <meta name="robots" content="noindex" />

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="format-detection" content="telephone=no" />
    <title>{pageTitle}</title>
    <meta name="description" content={description} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://calm-coffee.com" />
    <meta property="og:image" content="https://calm-coffee.com/ogp.jpg" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://calm-coffee.com/ogp.jpg" />
  </head>
  <body>
    <div class="wrapper">
      <Header />
      <main>
        <slot />
      </main>
      <Footer />
    </div>
    <script src="../lib/menu.ts"></script>
  </body>
</html>

<style lang="scss">
  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: YakuHanMP, 'Montserrat Variable', 'Zen Kaku Gothic New', sans-serif;
  }

  .wrapper {
    @include mq-desktop {
      position: relative;
      width: var(--pc-content-width);
      margin-left: auto;
    }
  }

  main {
    width: 100%;
    padding-bottom: clamp-size(64);
  }
</style>
